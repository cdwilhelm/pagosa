<fieldset>
  <label>Comment</label>
  <% form_for(@comment) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :user_id %>:<br />
      <%= current_user.name %>
      <%= f.hidden_field :user_id  %>

    </p>
    <p>
      <%= f.label :notice_id %>:<br />
      <%= @comment.notice_id %>
      <%= f.hidden_field :notice_id  %>
    </p>

    <p>
      <%= f.label :comment %>:<br />
      <%= f.text_area :comment , :rows=>"10",:cols=>"80" %>
    </p>
    <p>
      <% if @comment.id %>
        <%= f.submit "Update" %>
      <%else%>
        <%= f.submit "Create" %>
      <%end%>
    </p>

  <% end %>
</fieldset>