<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Login</th>
  </tr>

<% for users in @users %>
  <tr>
    <td><%=h users.name %></td>
    <td><%=h users.email %></td>
    <td><%=h users.login %></td>
    <td><%= link_to 'Show', users %></td>
    <td><%= link_to 'Edit', edit_users_path(users) %></td>
    <td><%= link_to 'Destroy', users, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New users', new_users_path %>
