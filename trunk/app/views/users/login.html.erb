<div >
  <fieldset>
    <legend>Please Log In</legend>
    <p style="color: green"><%= flash[:notice] %></p>
    <% form_tag do %>
      <p>
        <label for="name" >Name:</label>
        <%= text_field_tag :login, params[:login] %>
      </p>
      <p>
        <label for="password" >Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </p>
      <p>
        <%= submit_tag "Login" %>
      </p>
    <% end %>
  </fieldset>
</div>