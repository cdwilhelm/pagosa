<h1>Listing notices</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Description</th>
    <th>User</th>
    <th>Project</th>
    <th>Created at</th>
    <th>Updated at</th>
  </tr>

<% for notice in @notices %>
  <tr>
    <td><%=h notice.subject %></td>
    <td><%=h notice.description %></td>
    <td><%=h notice.user_id %></td>
    <td><%=h notice.project_id %></td>
    <td><%=h notice.created_at %></td>
    <td><%=h notice.updated_at %></td>
    <td><%= link_to 'Show', notice %></td>
    <td><%= link_to 'Edit', edit_notice_path(notice) %></td>
    <td><%= link_to 'Destroy', notice, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New notice', new_notice_path %>
