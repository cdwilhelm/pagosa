<%content_for :sidebar do%>
  <%= render :partial=>'sidebars/categories'%>
<%end%>

<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>

<% for category in @categories %>
  <tr>
    <td><%= link_to category.name, category %></td>
    <td><%=h category.description %></td>
